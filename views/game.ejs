<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		<!-- Icon -->
		<link rel="icon" type="image" href="public/icons/poker.png" />

		<!-- Style -->
		<link href="public/style/game.css" rel="stylesheet" />

		<!-- Bootstrap -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
		<link href="https://getbootstrap.com/docs/5.2/assets/css/docs.css" rel="stylesheet" />

		<!-- JQuery -->
		<script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>

		<!-- Font Awesome -->
		<script src="https://kit.fontawesome.com/ec062b5335.js" crossorigin="anonymous"></script>

		<!-- Police google font -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Oxanium&display=swap" rel="stylesheet" />
		<link href="https://fonts.googleapis.com/css2?family=Carter+One&display=swap" rel="stylesheet" />

		<title>Pok'help | Game</title>
	</head>

	<body>
		<div class="block-alert_perso" id="alert" style="display: none">
			<div class="alert_perso animation--boom center-text">
				<i class="fa-solid fa-triangle-exclamation"></i>
				<p id="alert-text">coucou</p>
			</div>
		</div>

		<div class="container">
			<%- include('includes/alert'); %>

			<!-- Username -->
			<p>Your are <%= username %></p>

			<!-- Button start -->
			<button onclick="button_start()">Start</button>

			<!-- Info Jeu -->
			<div id="info">Attente des joueurs</div>

			<!-- Pot & Mise actuelle -->
			<p class="pot_mise">pot: <span id="valeur_pot">none</span></p>
			<p class="pot_mise">mise: <span id="valeur_mise">none</span></p>

			<!-- Card communes -->
			<div id="cartes_communes"></div>

			<!-- Liste Joueurs -->
			<div id="liste_players" class="row justify-content-center text-center"></div> <!-- Nooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooo -->

			<!-- Choix possible -->
			<div class="d-flex justify-content-center">
				<div class="choix_possible justify-content-center text-center">
					<div>
						<button
							type="button"
							class="btn btn-success bouton"
							onclick="player_choose_action('suivre')"
							data-bs-toggle="tooltip"
							data-bs-placement="right"
							data-bs-title="Mettre la mÃªme somme que le joueur precedent"
							data-bs-custom-class="custom-tooltip">
							Suivre
						</button>
					</div>
					<div>
						<button
							type="button"
							class="btn btn-danger bouton"
							onclick="player_choose_action('abandon')"
							data-bs-toggle="tooltip"
							data-bs-placement="right"
							data-bs-title="Abandonner le tour"
							data-bs-custom-class="custom-tooltip">
							Abandonner
						</button>
					</div>
					<div>
						<button
							type="button"
							class="btn btn-primary bouton"
							onclick="player_choose_action('relance')"
							data-bs-toggle="tooltip"
							data-bs-placement="right"
							data-bs-title="Relance la mise avec l'argent choisit"
							data-bs-custom-class="custom-tooltip">
							Relancer de:<input class="form-control" type="text" value="100" min="0" max="" placeholder="Nbr" id="input_relance" />
						</button>
					</div>
					<div>
						<button
							type="button"
							class="btn btn-light bouton"
							onclick="player_choose_action('all-in')"
							data-bs-toggle="tooltip"
							data-bs-placement="right"
							data-bs-title="Mettre tout son argent en jeu"
							data-bs-custom-class="custom-tooltip">
							All-in
						</button>
					</div>
				</div>
			</div>

			<!-- Card of player -->
			<div class="d-flex justify-content-center text-center">
				<div id="your_card">
					<img src="public/images/cards/png/2_carreau.png" alt="" />
				</div>
			</div>

			<!-- Javascript -->
			<script
				src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
				integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
				crossorigin="anonymous"></script>
			<script src="public/javascript/javascript.js"></script>
		</div>
	</body>
</html>
