<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		<!-- Icon -->
		<link rel="icon" type="image" href="public/icons/poker.png" />

		<!-- Style -->
		<link href="public/style/game.css" rel="stylesheet" />

		<!-- Bootstrap -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
		<link href="https://getbootstrap.com/docs/5.2/assets/css/docs.css" rel="stylesheet" />

		<!-- JQuery -->
		<script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>

		<!-- Font Awesome -->
		<script src="https://kit.fontawesome.com/ec062b5335.js" crossorigin="anonymous"></script>

		<!-- Police google font -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Oxanium&display=swap" rel="stylesheet" />
		<link href="https://fonts.googleapis.com/css2?family=Carter+One&display=swap" rel="stylesheet" />
		<link href="https://fonts.googleapis.com/css2?family=Creepster&family=Sigmar&display=swap" rel="stylesheet" />
		<link href="https://fonts.googleapis.com/css2?family=Rowdies&display=swap" rel="stylesheet" />
		<link href="https://fonts.googleapis.com/css2?family=Carter+One&display=swap" rel="stylesheet" />
		<link href="https://fonts.googleapis.com/css2?family=Lilita+One&display=swap" rel="stylesheet" />
		<link href="https://fonts.googleapis.com/css2?family=Bruno+Ace&display=swap" rel="stylesheet" />
		<link href="https://fonts.googleapis.com/css2?family=Concert+One&display=swap" rel="stylesheet" />

		<title>Pok'help | Game</title>
	</head>

	<body>
		<div class="container">
			<!-- Info Jeu  -->
			<div class="d-flex justify-content-center text-center margin-top-perso" id="block-info-text">
				<div class="info">
					<div class="info-text" id="info">
						<div class="spinner-border" role="status">
							<span class="visually-hidden">Loading...</span>
						</div>
						en attente des joueurs
					</div>
				</div>
			</div>
			<div id="block-info-pot-mise">
				<div class="d-flex justify-content-center text-center margin-bottom-perso">
					<div class="info">
						<!-- Pot & Mise actuelle -->
						<div class="row">
							<div
								class="col-6 pot_mise"
								data-bs-toggle="tooltip"
								data-bs-placement="bottom"
								data-bs-title="Le pot en cour de jeu"
								data-bs-custom-class="custom-tooltip">
								<div>POT</div>
								<div id="valeur_pot"><i class="fa-solid fa-square-xmark"></i></div>
							</div>
							<div
								class="col-6 pot_mise"
								data-bs-toggle="tooltip"
								data-bs-placement="bottom"
								data-bs-title="La mise minimum à payer pour rester en jeu"
								data-bs-custom-class="custom-tooltip">
								<div>MISE MIN</div>
								<div id="valeur_mise"><i class="fa-solid fa-square-xmark"></i></div>
							</div>
						</div>

						<!-- Button start -->
						<button
							id="start_button"
							class="btn btn-primary"
							type="button"
							onclick="button_start()"
							data-bs-toggle="tooltip"
							data-bs-placement="right"
							data-bs-title="Lancer le jeu"
							data-bs-custom-class="custom-tooltip">
							START
						</button>
					</div>
				</div>
			</div>

			<!-- Card communes -->
			<div id="block-cartes-communes">
				<div class="d-flex justify-content-center text-center">
					<div class="box-game d-flex justify-content-center text-center" id="cartes_communes">
						<div class="flip-card" id="carte_communes_1">
							<div class="flip-card-inner" id="carte_communes_inner_1">
								<div class="flip-card-front">
									<img
										src="public/images/cards/png_80x116/back_card.png"
										alt=""
										class="tooltip_back_card"
										id="carte_communes_img_back_1"
										data-bs-toggle="tooltip"
										data-bs-placement="bottom"
										data-bs-title="pas encore dévoilé"
										data-bs-custom-class="custom-tooltip" />
								</div>
								<div class="flip-card-back" id="carte_communes_img_1">
									<img
										src="public/images/cards/png_80x116/back_card.png"
										alt=""
										id="carte_communes_img_tooltip_1"
										data-bs-toggle="tooltip"
										data-bs-placement="bottom"
										data-bs-title="⁉"
										data-bs-custom-class="custom-tooltip" />
								</div>
							</div>
						</div>
						<div class="flip-card" id="carte_communes_2">
							<div class="flip-card-inner" id="carte_communes_inner_2">
								<div class="flip-card-front">
									<img
										src="public/images/cards/png_80x116/back_card.png"
										alt=""
										class="tooltip_back_card"
										id="carte_communes_img_back_2"
										data-bs-toggle="tooltip"
										data-bs-placement="bottom"
										data-bs-title="pas encore dévoilé"
										data-bs-custom-class="custom-tooltip" />
								</div>
								<div class="flip-card-back" id="carte_communes_img_2">
									<img
										src="public/images/cards/png_80x116/back_card.png"
										alt=""
										id="carte_communes_img_tooltip_2"
										data-bs-toggle="tooltip"
										data-bs-placement="bottom"
										data-bs-title="⁉"
										data-bs-custom-class="custom-tooltip" />
								</div>
							</div>
						</div>
						<div class="flip-card" id="carte_communes_3">
							<div class="flip-card-inner" id="carte_communes_inner_3">
								<div class="flip-card-front">
									<img
										src="public/images/cards/png_80x116/back_card.png"
										alt=""
										class="tooltip_back_card"
										id="carte_communes_img_back_3"
										data-bs-toggle="tooltip"
										data-bs-placement="bottom"
										data-bs-title="pas encore dévoilé"
										data-bs-custom-class="custom-tooltip" />
								</div>
								<div class="flip-card-back" id="carte_communes_img_3">
									<img
										src="public/images/cards/png_80x116/back_card.png"
										alt=""
										id="carte_communes_img_tooltip_3"
										data-bs-toggle="tooltip"
										data-bs-placement="bottom"
										data-bs-title="⁉"
										data-bs-custom-class="custom-tooltip" />
								</div>
							</div>
						</div>
						<div class="flip-card" id="carte_communes_4">
							<div class="flip-card-inner" id="carte_communes_inner_4">
								<div class="flip-card-front">
									<img
										src="public/images/cards/png_80x116/back_card.png"
										alt=""
										class="tooltip_back_card"
										id="carte_communes_img_back_4"
										data-bs-toggle="tooltip"
										data-bs-placement="bottom"
										data-bs-title="pas encore dévoilé"
										data-bs-custom-class="custom-tooltip" />
								</div>
								<div class="flip-card-back" id="carte_communes_img_4">
									<img
										src="public/images/cards/png_80x116/back_card.png"
										alt=""
										id="carte_communes_img_tooltip_4"
										data-bs-toggle="tooltip"
										data-bs-placement="bottom"
										data-bs-title="⁉"
										data-bs-custom-class="custom-tooltip" />
								</div>
							</div>
						</div>
						<div class="flip-card" id="carte_communes_5">
							<div class="flip-card-inner" id="carte_communes_inner_5">
								<div class="flip-card-front">
									<img
										src="public/images/cards/png_80x116/back_card.png"
										alt=""
										class="tooltip_back_card"
										id="carte_communes_img_back_5"
										data-bs-toggle="tooltip"
										data-bs-placement="bottom"
										data-bs-title="pas encore dévoilé"
										data-bs-custom-class="custom-tooltip" />
								</div>
								<div class="flip-card-back" id="carte_communes_img_5">
									<img
										src="public/images/cards/png_80x116/back_card.png"
										alt=""
										id="carte_communes_img_tooltip_5"
										data-bs-toggle="tooltip"
										data-bs-placement="bottom"
										data-bs-title="⁉"
										data-bs-custom-class="custom-tooltip" />
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

			<!-- Liste Joueurs -->
			<div id="liste_players" class="row justify-content-center text-center"></div>

			<!-- Choix possible & Card of player -->
			<div class="row" id="block-choice-and-card">
				<div class="col-12 col-md-6">
					<!-- Choix possible -->
					<div class="d-flex justify-content-center text-center">
						<div class="text-center box-game">
							<div style="position: relative">
								<button type="button" class="btn btn-success bouton-choix" onclick="player_choose_action('suivre')">Suivre</button>
								<span
									class="help-button"
									style="display: none"
									data-bs-toggle="tooltip"
									data-bs-placement="right"
									data-bs-title="Mettre la même somme que le joueur precedent"
									data-bs-custom-class="custom-tooltip">
									<i class="fa-solid fa-circle-question"></i>
								</span>
							</div>
							<div style="position: relative">
								<button type="button" class="btn btn-danger bouton-choix" onclick="player_choose_action('abandon')">
									Abandonner
								</button>
								<span
									class="help-button"
									style="display: none"
									data-bs-toggle="tooltip"
									data-bs-placement="right"
									data-bs-title="Abandonner le tour"
									data-bs-custom-class="custom-tooltip">
									<i class="fa-solid fa-circle-question"></i>
								</span>
							</div>
							<div style="position: relative">
								<button type="button" class="btn btn-primary bouton-choix" onclick="player_choose_action('relance')">
									Relancer de:
								</button>
								<input class="form-control" type="number" value="100" min="0" max="" placeholder="Nbr" id="input_relance" />
								<span
									class="help-button"
									style="display: none"
									data-bs-toggle="tooltip"
									data-bs-placement="right"
									data-bs-title="Relance la mise avec l'argent choisit"
									data-bs-custom-class="custom-tooltip">
									<i class="fa-solid fa-circle-question"></i>
								</span>
							</div>
							<div style="position: relative">
								<button type="button" class="btn btn-light bouton-choix" onclick="player_choose_action('all-in')">All-in</button>
								<span
									class="help-button"
									style="display: none"
									data-bs-toggle="tooltip"
									data-bs-placement="right"
									data-bs-title="Mettre tout son argent en jeu"
									data-bs-custom-class="custom-tooltip">
									<i class="fa-solid fa-circle-question"></i>
								</span>
							</div>
						</div>
					</div>
				</div>
				<div class="col-12 col-md-6">
					<!-- Card of player -->
					<div class="d-flex justify-content-center text-center">
						<div class="box-game" style="height: 210px">
							<div class="d-flex justify-content-center text-center" id="your_card"></div>
							<div class="d-flex justify-content-center text-center">
								<div class="collapse collapse-horizontal" id="collapseWidthExample">
									<div
										class="probabilite"
										id="proba"
										data-bs-toggle="tooltip"
										data-bs-placement="bottom"
										data-bs-title="Probabilité de victoire avec vos cartes"
										data-bs-custom-class="custom-tooltip">
										<i class="fa-solid fa-square-xmark"></i> Aucune donnée
									</div>
								</div>
							</div>
						</div>
					</div>
					<!-- Afficher l'aide -->
					<div class="d-flex justify-content-center text-center">
						<div
							data-bs-toggle="tooltip"
							data-bs-placement="right"
							data-bs-title="Afficher les aides disponibles"
							data-bs-custom-class="custom-tooltip">
							<button
								class="btn btn-primary"
								id="aidez-moi"
								type="button"
								onclick="toogle_help()"
								data-bs-toggle="collapse"
								data-bs-target="#collapseWidthExample"
								aria-expanded="false"
								aria-controls="collapseWidthExample">
								Aidez-moi
							</button>
						</div>
					</div>
					<!-- Cacher cartes -->
					<div class="d-flex justify-content-center text-center">
						<div
							data-bs-toggle="tooltip"
							data-bs-placement="right"
							data-bs-title="Cacher ses cartes sur son écran"
							data-bs-custom-class="custom-tooltip">
							<button class="btn btn-primary" id="hide-card" type="button" onclick="hide_my_card()">Cacher mes cartes</button>
						</div>
					</div>
				</div>
			</div>

			<div class="block-alert_perso" id="alert" style="display: none">
				<div class="alert_perso animation--boom center-text" id="alert-animation">
					<i class="fa-solid fa-triangle-exclamation"></i>
					<p id="alert-text">vide</p>
					<button type="button" class="btn-close btn-close-white" aria-label="Close" onclick="hide_alert()"></button>
				</div>
			</div>

			<!-- Javascript -->
			<script
				src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
				integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
				crossorigin="anonymous"></script>
			<script src="public/javascript/javascript.js"></script>
		</div>
	</body>
</html>
